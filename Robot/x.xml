<mujoco model="two_wheel_box">
    <compiler angle="degree" coordinate="local"/>

    <option timestep="0.01" gravity="0 0 -9.81"/>

    <worldbody>
        <light diffuse=".5 .5 .5" pos="0 0 3" dir="0 0 -1"/>
        <!-- ground -->
        <geom name="floor" type="plane" pos="0 0 0" size="10 10 0.1" rgba="0.9 0.9 0.9 1"/>

        <!-- robot body -->
        <body name="chassis" pos="0 0 0.2">
            <geom name="chassis_geom" type="box" size="0.3 0.2 0.1" rgba="0.2 0.5 0.8 1" mass="2"/>

            <!-- left front wheel -->
            <body name="left_wheel" pos="0.5 0.15 0">
                <joint name="left_wheel_joint" type="hinge" axis="0 1 0" limited="false"/>
                <geom name="left_wheel_geom" type="cylinder" size="0.05 0.02" rgba="0 0 0 1" mass="0.2" friction="1 0.005 0.0001"/>
            </body>

            <!-- right front wheel -->
            <body name="right_wheel" pos="0.25 -0.15 0">
                <joint name="right_wheel_joint" type="hinge" axis="0 1 0" limited="false"/>
                <geom name="right_wheel_geom" type="cylinder" size="0.05 0.02" rgba="0 0 0 1" mass="0.2" friction="1 0.005 0.0001"/>
            </body>
        </body>
    </worldbody>

    <actuator>
        <!-- velocity actuators for RL -->
        <velocity name="left_wheel_vel" joint="left_wheel_joint" kv="50"/>
        <velocity name="right_wheel_vel" joint="right_wheel_joint" kv="50"/>
    </actuator>
</mujoco>