<mujoco>
    <!-- <option gravity="0 0 0"/> -->
    <worldbody>
        <light diffuse=".5 .5 .5" pos="0 0 3" dir="0 0 -1"/>
        <geom type="plane" size="10 10 0.1" rgba=".9 .9 .9 1" friction="1 0.01 0.001"/>
        <body pos="0 0 0">
            <joint type="free"/>
            <geom type="box" size=".2 .075 .05" rgba=".9 .9 0 .5" friction="0 0 0"/>
            <!-- <body pos="0 0 0.05" euler="0 0 0">
                <geom type="box" size=".01 .01 .01" pos="0 0 1" rgba=".9 0 0 .5"/> -->

            <body pos="0.125 -0.125 0">   <!-- top right corner -->
                <!-- steering joint for this wheel -->
                <geom type="sphere" size="0.001" mass="0.001" rgba="0 0 0 0"/>
                <joint name="steer_tr" type="hinge" axis="0 0 1" range="-0.5 0.5" damping="5.0" frictionloss="0.5" springref="0" stiffness="50"/>
                <body>
                    <!-- wheel joint for spinning -->
                    <joint name="tr" type="hinge" axis="0 1 0" limited="false" damping="0.1" frictionloss="0.1"/>
                    <geom type="cylinder" size=".1 .02" euler="90 0 0" rgba="0 .9 0 .5" mass="0.2" friction="1 0.01 0.2"/>
                </body>
            </body>

            <body pos="0.125 0.125 0">   <!-- top left corner -->
                <!-- steering joint for this wheel -->
                <geom type="sphere" size="0.001" mass="0.001" rgba="0 0 0 0"/>
                <joint name="steer_tl" type="hinge" axis="0 0 1" range="-0.5 0.5" damping="5.0" frictionloss="0.5" springref="0" stiffness="50"/>
                <body>
                    <!-- wheel joint for spinning -->
                    <joint name="tl" type="hinge" axis="0 1 0" limited="false" damping="0.1" frictionloss="0.1"/>
                    <geom type="cylinder" size=".1 .02" euler="90 0 0" rgba="0 .9 0 .5" mass="0.2" friction="1 0.01 0.2"/>
                </body>
            </body>

            <body pos="-0.125 0.125 0">   <!-- bottom left corner -->
                <!-- steering joint for this wheel -->
                <geom type="sphere" size="0.001" mass="0.001" rgba="0 0 0 0"/>
                <joint name="steer_bl" type="hinge" axis="0 0 1" range="-0.5 0.5" damping="5.0" frictionloss="0.5" springref="0" stiffness="50"/>
                <body>
                    <!-- wheel joint for spinning -->
                    <joint name="bl" type="hinge" axis="0 1 0" limited="false" damping="0.1" frictionloss="0.1"/>
                    <geom type="cylinder" size=".1 .02" euler="90 0 0" rgba="0 .9 0 .5" mass="0.2" friction="1 0.01 0.2"/>
                </body>
            </body>

            <body pos="-0.125 -0.125 0">   <!-- bottom right corner -->
                <!-- steering joint for this wheel -->
                <geom type="sphere" size="0.001" mass="0.001" rgba="0 0 0 0"/>
                <joint name="steer_br" type="hinge" axis="0 0 1" range="-0.5 0.5" damping="5.0" frictionloss="0.5" springref="0" stiffness="50"/>
                <body>
                    <!-- wheel joint for spinning -->
                    <joint name="br" type="hinge" axis="0 1 0" limited="false" damping="0.1" frictionloss="0.1"/>
                    <geom type="cylinder" size=".1 .02" euler="90 0 0" rgba="0 .9 0 .5" mass="0.2" friction="1 0.01 0.2"/>
                </body>
            </body>
        </body>
    </worldbody>

    <actuator>
        <!-- <motor joint="steering" gear="1"/> -->
        <motor joint="tl" gear="1"/>
        <motor joint="bl" gear="1"/>
        <motor joint="tr" gear="1"/>
        <motor joint="br" gear="1"/>
        <position joint="steer_tr" kp="50"/>
        <position joint="steer_tl" kp="50"/>
        <position joint="steer_br" kp="50"/>
        <position joint="steer_bl" kp="50"/>
    </actuator>

</mujoco>